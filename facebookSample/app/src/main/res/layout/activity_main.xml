<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.facebooksample.MainActivity">


    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/ppView"
        app:layout_constraintLeft_toLeftOf="@+id/ppView"
        app:layout_constraintRight_toRightOf="@+id/ppView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="259dp"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintLeft_toLeftOf="@+id/info"
        app:layout_constraintRight_toRightOf="@+id/info"
        tools:layout_editor_absoluteX="148dp" />

    <com.facebook.login.widget.ProfilePictureView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ppView"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
